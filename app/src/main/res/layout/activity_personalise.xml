                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10sp"
                            android:src="@drawable/line" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvshoping"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/bentonsans_regular"
                                android:text="Shopping Centres"
                                android:textColor="#707173"
                                android:textSize="18dp"
                                android:textStyle="bold" />

                            <com.suke.widget.SwitchButton
                                android:id="@+id/shopingswitchbtn"
                                android:layout_width="65dp"
                                android:layout_height="40dp"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="0dp"
                                app:sb_background="#707173"
                                app:sb_checked_color="@color/colorAccent"
                                app:sb_show_indicator="false"
                                app:sb_uncheck_color="#707173"
                                app:sb_uncheckcircle_color="#707173" />


                        </RelativeLayout>

                        <TextView
