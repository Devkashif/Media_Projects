                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp"
                            android:layout_marginTop="-18dp"
                            android:fontFamily="@font/bentonsans_regular"
                            android:text="3505 News Articles"
                            android:textColor="#d72027"
                            android:textSize="12dp" />

                        <ImageView
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10sp"
                            android:src="@drawable/line" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10sp"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvtech"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/bentonsans_regular"
                                android:text="Tech"
                                android:textColor="#707173"
                                android:textSize="18dp"
                                android:textStyle="bold" />

                            <com.suke.widget.SwitchButton
                                android:id="@+id/techswitchbtn"
                                android:layout_width="65dp"
                                android:layout_height="40dp"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="0dp"
                                app:sb_background="#707173"
                                app:sb_checked_color="@color/colorAccent"
                                app:sb_show_indicator="false"
                                app:sb_uncheck_color="#707173"
                                app:sb_uncheckcircle_color="#707173" />


                        </RelativeLayout>

                        <TextView
                            android:id="@+id/techsubtext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp"
                            android:layout_marginTop="-18dp"
                            android:fontFamily="@font/bentonsans_regular"
                            android:text="2355 News Articles"
                            android:textColor="#d72027"
                            android:textSize="12dp" />

                        <ImageView
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10sp"
                            android:src="@drawable/line" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10sp"
                        android:layout_marginRight="20dp"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tvretailsupport"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/bentonsans_regular"
                                android:text="Retail Support"
                                android:textColor="#707173"
                                android:textSize="18dp"
                                android:textStyle="bold" />

                            <com.suke.widget.SwitchButton
                                android:id="@+id/retailsupportswitchbtn"
                                android:layout_width="65dp"
                                android:layout_height="40dp"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="0dp"
                                app:sb_background="#707173"
                                app:sb_checked_color="@color/colorAccent"
                                app:sb_show_indicator="false"
                                app:sb_uncheck_color="#707173"
                                app:sb_uncheckcircle_color="#707173" />


                        </RelativeLayout>

                        <TextView
                            android:id="@+id/retailsupportsubtext"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="14dp"
                            android:layout_marginTop="-18dp"
                            android:fontFamily="@font/bentonsans_regular"
                            android:text="13708 News Articles"
                            android:textColor="#d72027"
                            android:textSize="12dp" />

                        <ImageView
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="10sp"
                            android:src="@drawable/line" />
                    </LinearLayout>

                    <Button
                        android:id="@+id/personalisebtn"
                        android:layout_width="250dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/btnshapewithcolor"
                        android:text="Personalise"
                        android:textAllCaps="false"
                        android:textColor="#fff"
                        android:textSize="18dp" />

                    <Button
                        android:id="@+id/skip"
                        android:layout_width="250dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/btnshape"
                        android:text="Skip"
                        android:textAllCaps="false"
                        android:textColor="#E61820"
                        android:textSize="18dp" />
